<Window x:Class="practika.CAPTCHA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practika"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        mc:Ignorable="d"
        Title="CAPTCHA" Height="210" Width="300">
    
    <Border>
        <Grid>
        <StackPanel>
            <Image x:Name="captchaImage" Width="200" Height="100" VerticalAlignment="Top"/>
            <TextBox x:Name="captchaTextBox" Width="200" Height="30" Margin="0,10"/>
            <TextBlock x:Name="ErrorMessage"
                               Foreground="#D7596D"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>
                <Button x:Name="refreshButton" Content="Refresh" Width="100" Height="30" Margin="0,0" Click="CheckButton_Click"/>
        </StackPanel>
    </Grid>
    </Border>
</Window>
