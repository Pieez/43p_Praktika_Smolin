<Window x:Class="practika.CAPTCHA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practika"
        mc:Ignorable="d"
        Title="CAPTCHA" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Image x:Name="captchaImage" Width="200" Height="100"/>
            <TextBox x:Name="captchaTextBox" Width="200" Height="30" Margin="0,10"/>
            <Button x:Name="refreshButton" Content="Refresh" Width="100" Height="30" Margin="0,10" Click="CheckButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
