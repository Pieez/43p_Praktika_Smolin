<UserControl x:Class="practika.Registr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:practika" xmlns:viewmodel="clr-namespace:practika.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:Date}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

<!--
    <UserControl.DataContext>
        <viewmodel:Date />
    </UserControl.DataContext>
-->
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="SearchTextBox" Text="Enter search text here" Width="200" Margin="5" />
            <Button Content="Search" Command="{Binding Path=SearchCommand}" Margin="5" />
        
        
            <TextBlock Text="Sort by:" Margin="5" />
            <Button Content="Service" Command="{Binding Path=SortByServiceCommand}" Margin="5" />
            <Button Content="Price" Command="{Binding Path=SortByPriceCommand}" Margin="5" />
       
            <TextBlock Text="Filter by:" Margin="5" />
            <Button Content="Cheap" Command="{Binding Path=FilterByCheapCommand}" Margin="5" />
            <Button Content="Expensive" Command="{Binding Path=FilterByExpensiveCommand}" Margin="5" />
        </StackPanel>
        <DataGrid x:Name="MyDataGrid" ItemsSource="{Binding Path=MyDataList}" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Service" Binding="{Binding Path=Service}" />
                <DataGridTextColumn Header="Price" Binding="{Binding Path=Price}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal">
            <Button Content="1" Command="{Binding Path=GoToPage1Command}" Margin="5" />
            <Button Content="2" Command="{Binding Path=GoToPage2Command}" Margin="5" />
            <Button Content="3" Command="{Binding Path=GoToPage3Command}" Margin="5" />
            <Button Content="4" Command="{Binding Path=GoToPage4Command}" Margin="5" />
        </StackPanel>
    </StackPanel>


</UserControl>
